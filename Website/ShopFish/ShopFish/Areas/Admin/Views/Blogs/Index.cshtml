@model IEnumerable<ShopFish.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeadBlog)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BodyBlog)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FootBlog)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeadBlog)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BodyBlog)
        </td>
        <td>
            <img src="~/Content/img/@Html.DisplayFor(modelItem => item.image1)"  style="width:150px;height:150px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FootBlog)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
         
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
