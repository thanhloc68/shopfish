@model ShopFish.ViewModels.ChangePassword

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var abc = Session["Username"] as ShopFish.Models.Accounts;
}

<div class="container-fluid bg-light">

    <div class="row">
        <div class="col-md-3"></div>
        <aside class="col-md-6">

            @using (Html.BeginForm("ChangePassword", "Login"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="text-center">Đổi mật khẩu</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-4">Tên tài khoản</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Username,  new { @class = "form-control", required = "required", @Value= abc.Usernames })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">Mật khẩu cũ</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">Mật khẩu mới</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">Nhập lại mật khẩu mới</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @ViewBag.ThongBao
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 text-center">
                            <input type="submit" value="Đổi mật khẩu" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
            </aside>
</div></div>