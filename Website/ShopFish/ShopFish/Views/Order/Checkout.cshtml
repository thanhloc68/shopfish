@model ShopFish.Models.Orders
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid">

    <div class="row">
        <div class="col-md-3"></div>
        <aside class="col-md-6">
            <h4 style="text-transform: uppercase">Mời bạn nhập thông tin đặt hàng :  </h4>
            <hr />
            @using (Html.BeginForm("Purchase", "Order"))
            {
                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="control-label col-md-3">Tên tài khoản</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.CustomerId, new { @class = "form-control" })

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">Ngày đặt hàng</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="control-label col-md-3">Tên người nhận</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Receiver, new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Địa chỉ</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })

                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-3">Tổng tiền</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @readonly = "true" })

                        </div>
                    </div>

                    @*<div class="form-group">
                    <label class="control-label col-md-2">Số tài khoản</label>
                    <div class="col-md-10">
                        @Html.TextBox("BankAccount", null, new { @class = "form-control" })
                    </div>
                </div>*@

                    <div class="form-group">
                        <label class="control-label col-md-3">Mô tả</label>
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Descriptions, new { @class = "form-control", rows = "5" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 text-center">
                            <input type="submit" value="Đặt Hàng" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </aside>
            <div class="col-md-3"></div>
        </div></div>
   
